package faixasEtÃ¡rias;
import java.util.Scanner;

public class FaixasEtÃ¡rias {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int resp = 1, menores = 0, jovensAdultos = 0, adultos = 0, maduros = 0, idosos = 0, total = 0;
		float idade = 0, soma = 0, media = 0, pMenores = 0, pJovensAdultos = 0, pAdultos = 0, pMaduros = 0, pIdosos = 0, pTotal = 0;
		
		while(resp != 0) {
			System.out.print("Digite a idade da pessoa: ");
			idade = sc.nextFloat();
			
			if(idade > 0 && idade <= 17) {
				menores ++;
			}else if(idade > 18 && idade <= 35) {
				jovensAdultos++;
			}else if(idade > 35 && idade <= 50) {
				adultos++;
			}else if(idade > 50 && idade <= 65) {
				maduros++;
			}else if(idade > 65 && idade <= 100) {
				idosos++;
			}else {
				System.out.println("Idade InvÃ¡lida");
			}
			
			total = menores + jovensAdultos + adultos + maduros + idosos;
			
			
			System.out.println("");
			System.out.print("Deseja continuar cadastrando: [1= sim / 0= nÃ£o] ");
			resp = sc.nextInt();
			System.out.println("");
		}
		
		
		
		
		System.out.println("");
		System.out.printf();

	}
}
