package exercicio08;
import java.util.Scanner;

public class exercicio08 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Calculadora do Vinicius!");
		System.out.println("");
		System.out.print("Digite Um número: ");
		float numero1 = sc.nextFloat();
		System.out.print("Digite Mais um número: ");
		float numero2 = sc.nextFloat();

		System.out.println("");
		System.out.println("-------------------------------------------------");
		System.out.println("1) Somar");
		System.out.println("2) Subtrair ");
		System.out.println("3) Multiplicar");
		System.out.println("4) Dividir");
		System.out.println("5) Sair do programa");
		System.out.println("-------------------------------------------------");
		System.out.print("Digite sua escolha:");
		float escolha = sc.nextFloat();
		
		if(escolha == 1) {
			System.out.printf("1) %.2f + %.2f = %.2f", numero1, numero2, (numero1+numero2));
		}else if(escolha == 2) {
			System.out.printf("2) %.2f - %.2f = %.2f", numero1, numero2, (numero1-numero2));
		}else if(escolha == 3) {
			System.out.printf("3) %.2f x %.2f = %.2f", numero1, numero2, (numero1*numero2));
		}else if(escolha == 4) {
			System.out.printf("4) %.2f / %.2f = %.2f", numero1, numero2, (numero1/numero2));
		}else {
			System.out.print("Obrigado por usar nossos serviços!");
		}
	}
}
